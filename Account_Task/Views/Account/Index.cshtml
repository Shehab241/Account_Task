
@model IEnumerable<Account>
@{
    ViewData["Title"] = "Index";
}


<span class="text-danger" id="messageDiv">@TempData["Message"]</span>
<h2>Account List</h2>

<a class="btn btn-primary" asp-action="Create">Create New Account</a>
<br />
<br />
<br />
@if (Model.Count()>0){
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" id="searchtext" name="searchValue" placeholder="Search " class="form-control">
            </div>
            <div class="col-4">
                <input type="submit" placeholder="Search" class="btn btn-success" />
            </div>
        </div>
    </form>
<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Account_Number</th>
            <th>Balance</th>
            <th>Currency</th>
            <th>UserName</th>
            <th>Status</th>
            <th>Detail</th>
            <th>Update</th>
            <th>Delete</th>
            
            
        </tr>
    </thead>
    <br/> 
    <br/>
    <tbody>
        @foreach (var Account in Model)
        {
            <tr>
                <td>@Account.Users?.Id</td>
                <td>@Account.Account_Number</td>

                <td>@Account.Balance</td>
                <td>@Account.Currency</td>
                <td>@Account.Users?.Username</td>
                <td>@Account.Status</td>
                    <td>
                        <a asp-controller="Account" asp-action="Detail" asp-route-id="@Account.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Detail

                        </a>
                    </td>
                    <td>
                        <a asp-controller="Account" asp-action="Edit" asp-route-id="@Account.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update

                        </a>
                    </td>

                    <td>
                        <a asp-controller="Account" asp-action="Delete" asp-route-id="@Account.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete

                        </a>
                    </td>
               
            </tr>
        }
    </tbody>
    </table>
}

else
{
    <div class="mt-4 alert alert-warning">

        <h3>There No Account </h3>

    </div>
}

<script>
    var timeoutInSeconds = 5;

    window.onload = function () {
        setTimeout(function () {
            var messageDiv = document.getElementById('messageDiv');
            if (messageDiv) {
                messageDiv.style.display = 'none';
            }
        }, timeoutInSeconds * 1000); 
    };
</script>