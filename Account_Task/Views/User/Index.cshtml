
@model IEnumerable<users>
@{
    ViewData["Title"] = "Index";
}


<h2>User List</h2>


<a class="btn btn-primary" asp-action="Create">Create New User</a>
<br />
<br />
<br />
@if (Model.Count()>0){
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="searchUsername" placeholder="Search by username" class="form-control">
            </div>
            <div class="col-md-4">
                <input type="text" name="searchEmail" placeholder="Search by email" class="form-control">
            </div>
            <div class="col-md-4">
                <input type="number" name="searchUserID" placeholder="Search by user ID" class="form-control">
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>First_Name</th>
            <th>Last_Name</th>
            <th>Detail</th>
            <th>Update</th>
            <th>Delete</th>
            
            
        </tr>
    </thead>
    <br/> 
    <br/>
    <tbody>
        @foreach (var user in Model)
        {
            <tr> 
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.First_Name</td>
                <td>@user.Last_Name</td>
                    <td>
                            <a asp-controller="User" asp-action="Detail" asp-route-id="@user.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Detail
                            
                            </a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update

                        </a>
                    </td>

                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete

                        </a>
                    </td>
               
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">

        <h3>There No Users </h3>

    </div>
}
